LET vMaxDate = NUM($(vNow));//NUM(PEEK('MaxDate', 0, 'StartAndEndDates'));


drop tables StartAndEndDates;






TemporaryCalendar: 
LOAD Distinct
	 monthstart($(vMinDate) + recno() - 1) AS TempDate 
AUTOGENERATE if(isnull(vMaxDate) or isnull(vMinDate),0,$(vMaxDate) - $(vMinDate) + 1);

