AllDatesStatement:
Load distinct
	[Date (BridgeTableOrgDate)] as %lnk_StatementDate
Resident BridgeTableOrgDate;

StartAndEndDates:
Load
	MIN([%lnk_StatementDate]) as MinDate,
    MAX([%lnk_StatementDate]) as MaxDate
Resident AllDatesStatement;

Drop Table AllDatesStatement;

LET vMinDate = NUM(PEEK('MinDate',0,'StartAndEndDates'));
